<!-- start -->
<%-include("partials/start.ejs")%>
  <!-- nav -->
  <%-include("partials/navBar.ejs")%>
    <div class="flex overflow-hidden bg-white pt-16">
      <!-- side bar -->
      <%-include("partials/aside.ejs")%>

        <div id="main-content" class="h-full w-full relative overflow-y-auto lg:ml-64">
          <main>
            <div class="p-6 sm:p-8 lg:p-10">
              <!-- Header -->
              <div class="mb-8">
                <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-2">
                  Posts
                </h1>
                <p class="text-gray-600 text-lg">Manage your blog collection with ease</p>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-3 gap-6 mb-8">
                <%blogs.map((data)=>{%>
                  <div class="blog-card-wrapper group">
                    <div
                      class="blog-card h-full bg-white rounded-3xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2">
                      <div class="relative h-56 overflow-hidden bg-gradient-to-br from-gray-100 to-gray-200">
                        <img src="/<%=data.blogImage%>" alt="<%=data.blogTitle%>"
                          class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" />
                        <div
                          class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300 flex items-end p-6">
                          <a href="#"
                            class="bg-white/90 hover:bg-white px-6 py-3 rounded-2xl font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200 flex items-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z">
                              </path>
                            </svg>
                            Quick View
                          </a>
                        </div>
                      </div>
                      <div class="p-8">
                        <div class="mb-4">
                          <h3
                            class="text-xl font-bold text-gray-900 leading-tight line-clamp-2 group-hover:text-[#00b3b3] transition-colors pr-4">
                            <%=data.blogTitle%>
                          </h3>
                        </div>
                        <!-- tags -->
                        <% let tags=data.blogTags.split(",") %>
                          <div class="flex flex-wrap gap-2 mb-5">
                            <% tags.forEach(tag=> { %>
                              <span
                                class="px-3 py-1 bg-gradient-to-r uppercase from-[#00b3b3]/10 to-black-500/10 text-gray-700 text-[10px] font-semibold rounded-full border border-[#00b3b3]">
                                <%= tag.trim() %>
                              </span>
                              <% }) %>
                          </div>
                          <p class="text-gray-600 leading-relaxed line-clamp-3 mb-6 text-sm">
                            <%=data.blogDescription%>
                          </p>
                          <div class="flex items-center justify-between pt-6 border-t border-gray-100">
                            <div class="flex gap-2">
                              <a href="/edit-form/<%=data.id%>"
                                class="flex items-center px-4 py-2 text-sm font-semibold text-indigo-600 hover:text-indigo-700 bg-indigo-50 hover:bg-indigo-100 rounded-xl transition-all duration-200">
                                <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z">
                                  </path>
                                </svg>
                                Edit
                              </a>
                              <a href="/delete-blog/<%=data.id%>"
                                class="flex cursor-pointer items-center px-4 py-2 text-sm font-semibold text-red-600 hover:text-red-700 bg-red-50 hover:bg-red-100 rounded-xl transition-all duration-200">
                                <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16">
                                  </path>
                                </svg>
                                Delete
                              </a>
                            </div>
                            <div class="text-xs text-gray-500 font-medium">ID: ABC123</div>
                          </div>
                      </div>
                    </div>
                  </div>
                  <%})%>
              </div>
            </div>
          </main>
        </div>
    </div>

    <script async defer src="/assets/js/buttons.js"></script>
    <script src="/assets/js/app.bundle.js"></script>
    <!-- end -->
    <%-include("partials/end.ejs")%>